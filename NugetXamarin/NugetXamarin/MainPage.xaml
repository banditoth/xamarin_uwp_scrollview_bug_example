<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:xamarin="clr-namespace:ZF.Packages.Humanizer.Xamarin;assembly=ZF.Packages.Humanizer.Xamarin"
             x:Class="NugetXamarin.MainPage">

    <Grid>
        <RefreshView>
            <ScrollView>
                <StackLayout>
                    <Grid HeightRequest="250"
                          BackgroundColor="LightGray">
                        <Label Text="If you click this area after scroll, nothing will happen"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>                    
                <StackLayout Spacing="15"
                             x:Name="container" />
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>

</ContentPage>
